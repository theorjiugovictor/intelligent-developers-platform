# Intelligence Engine Environment Variables
# Copy this file to .env and update values as needed

# Database
DATABASE_URL=postgresql://idp_user:idp_pass@postgres:5432/idp_intelligence

# Redis
REDIS_URL=redis://redis:6379

# Observability Stack
LOKI_URL=http://loki:3100
MIMIR_URL=http://mimir:9009
TEMPO_URL=http://tempo:3200

# Model settings
MODEL_PATH=/app/models
RETRAIN_INTERVAL_HOURS=24

# Analysis settings
BREAKING_CHANGE_THRESHOLD=0.7
ANOMALY_THRESHOLD=0.8
PERFORMANCE_DEGRADATION_THRESHOLD=0.15

# Self-healing settings
AUTO_HEAL_ENABLED=True
AUTO_HEAL_DRY_RUN=False

# Feature flags
ENABLE_BREAKING_CHANGE_DETECTION=True
ENABLE_ANOMALY_DETECTION=True
ENABLE_PERFORMANCE_PREDICTION=True
ENABLE_SELF_HEALING=True

# Claude API (optional)
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-5-20250514
CLAUDE_MAX_TOKENS=4096

# Startup tolerance
ALLOW_DB_INIT_FAILURE=True
